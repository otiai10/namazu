# ============================================================
# Auth configuration for Docker Compose
# ============================================================
# Copy this file to .env.compose and fill in your values.
#
# To use production Firebase Auth (recommended for local dev):
#   - Leave FIREBASE_AUTH_EMULATOR_HOST unset
#   - Set real API key and auth domain
#
# To use Auth Emulator instead:
#   - Uncomment FIREBASE_AUTH_EMULATOR_HOST
#   - Set VITE_USE_AUTH_EMULATOR=true
#   - Set VITE_FIREBASE_API_KEY=fake-api-key

# API Server
NAMAZU_AUTH_ENABLED=true
NAMAZU_AUTH_PROJECT_ID=namazu-live
NAMAZU_AUTH_TENANT_ID=localdev-7r9gc
# FIREBASE_AUTH_EMULATOR_HOST=firebase-emulators:9099

# Web Frontend
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=namazu-live
VITE_FIREBASE_TENANT_ID=localdev-7r9gc
VITE_USE_AUTH_EMULATOR=false
